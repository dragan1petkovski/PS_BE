@model DTO.User.SetNewPassword
<html>
<header>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</header>

<body>
	<div class="container-fluid">
		<div class="row text-center">
			<p class="h1">Password Sense</p>
		</div>
		<div class="row mt-3 justify-content-center">
			@if(ViewData["ErrorMessage"] != "null")
			{
				
			}
			<div class="col-4">
				@using (Html.BeginForm("SetNewPassword", "EmailNotification", new {id = Model.requestid},FormMethod.Post))
				{

					@Html.PasswordFor(m => m.password, new { @class = "form-control mt-3", @placeholder = "Enter username" })
					@Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
					@Html.PasswordFor(m => m.confirmpassword, new { @class = "form-control mt-3", @placeholder = "Enter password" })
					@Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
					@Html.HiddenFor(m => m.requestid, Model.requestid)
					<input type="submit" class="form-control mt-3" value="Set Password" />
				}
			</div>

		</div>
	</div>
</body>
</html>